.chocoholic-content
  - if content.directory?
    .icon= image_tag content.icon_path
    .info
      = link_to content.name, {:id => content.id, :action => :show}
    .type
      = "フォルダ"
    .other_info
      .detail
        = link_to edit_content_path(content) do
          %i.icon-cog
          編集

  - else
    .icon= image_tag content.icon_path
    .info
      = link_to content.name, content.data.to_s
      .visible-desktop
        - content.tag_list.each do |t|
          %span.label= t
    .type
      = "ファイル"
      .size
        %span= number_to_human_size(content.file_size || 0, :precision => 1)
    .other_info
      .updated_at
        = content.updated_at.strftime("%Y/%m/%d %H:%M")
      .detail
        = link_to content_handout_path(content.parent, content) do
          %i.icon-info-sign
          詳細
