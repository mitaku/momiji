.chocoholic-content
  - if content.is_a?(Chocoholic::Directory)
    .icon
      %i.icon-folder-close
    .name= link_to content.name, {:id => content.id, :action => :show}
    .action
      .detail
        = link_to "#info" do
          %i.icon-info-sign
          詳細
    .date
      .created_at
        登録:
        = content.created_at.strftime("%Y/%m/%d %H:%M")
      .updated_at
        更新:
        = content.updated_at.strftime("%Y/%m/%d %H:%M")

  - else
    .icon
      %i.icon-file
    .name= link_to content.name, content_handout_path(content.parent, content)
    .action
      .download
        = link_to "#DL" do
          %i.icon-download
          ダウンロード
    .date
      .created_at
        登録:
        = content.created_at.strftime("%Y/%m/%d %H:%M")
      .updated_at
        更新:
        = content.updated_at.strftime("%Y/%m/%d %H:%M")
