= content_for :css do
  = stylesheet_link_tag "chocoholic/application"

%ul.breadcrumb
  %li
    %i.icon-folder-open
  - @directory.ancestors.each do |a|
    %li
      = link_to a.name, {:id => a.id }
      %span.divider= "/"
  %li.active= @directory.name

.row
  .span9
    .panel.rounded
      .header.rounded-top
        %h4
          %i.icon-folder-open
          = @directory.name

      .content
        .chocoholic-contents
          - @directory.children.order(:name).each do |content|
            = render 'content', :content => content
  .span3
    .panel.rounded.visible-desktop
      = render 'action_menu', :directory => @directory

    .panel.rounded.visible-desktop
      .content
        %ul.nav.nav-list
          %li.nav-header 閲覧のみのユーザー
          - @directory.user_permissions.where(:mode => "readonly").each do |u|
            %li= u.resource.name
          %li.nav-header 閲覧のみのユーザー分類
          - @directory.category_item_user_permissions.where(:mode => "readonly").each do |u|
            %li= u.resource.name
          %li.nav-header 書き込み可能のユーザー
          - @directory.user_permissions.where(:mode => "writable").each do |u|
            %li= u.resource.name
          %li.nav-header 書き込み可能のユーザー分類
          - @directory.category_item_user_permissions.where(:mode => "writable").each do |u|
            %li= u.resource.name


#mkdir_dialog.modal.hide.fade(tabindex = "-1" role = "dialog" aria-lablledby="mkdirModalLabel" aria-hidden="true")
  .modal-header
    %button.close(type="button" data-dismiss="modal" aria-hidden="true") ×
    %h3#mkdirModalLabel フォルダの追加
  .modal-body
    = simple_form_for @directory.children.new, :url => {:action => :mkdir, :id => @directory.id} do |f|
      = f.input :name, :label => "フォルダ名"
      %button.btn.btn-primary(type="submit") 追加

#upload_dialog.modal.hide.fade(tabindex = "-1" role = "dialog" aria-lablledby="uploadModalLabel" aria-hidden="true")
  .modal-header
    %button.close(type="button" data-dismiss="modal" aria-hidden="true") ×
    %h3#uploadModalLabel アップロード
  .modal-body
    = simple_form_for @directory.children.new, :url => content_handouts_path(@directory) do |f|
      = f.input :data, :as => :file, :label => "アップロードするファイルの選択"
      %button.btn.btn-primary(type="submit") アップロード
