%ul.breadcrumb
  %li
    %i.icon-folder-open
  - @handout.ancestors.each do |a|
    %li
      = link_to a.name, content_path(a)
      %span.divider= "/"
  %li= link_to @handout.name, content_handout_path(@handout.parent, @handout)
  %li.active= "(編集)"

.row
  .span6
    .panel.rounded
      .header.rounded-top
        %h4
          %i.icon-info-sign
          詳細
      .content
        .info
          = image_tag "chocoholic/filetype/#{@handout.file_type}.png", :size => "48x48"
          = link_to @handout.data.to_s, :class => 'btn btn-info' do
            %i.icon-download
            = "ダウンロード"
        %dl
          %dt ファイルタイプ
          %dd= @handout.file_type
          %dt ファイルサイズ
          %dd 3 MB
          %dt アップロード日時
          %dd= @handout.created_at.strftime("%Y/%m/%d %H:%M")
          %dt 更新日時
          %dd= @handout.updated_at.strftime("%Y/%m/%d %H:%M")
  .span6
    .panel.rounded
      .header.rounded-top
        %h4
          %i.icon-cog
          管理
      .content
        = render 'form', :handout => @handout

.history
  .panel.rounded
    .header.rounded-top
      %h4 履歴
    .content
      %table.table.table-striped
        %tbody
          %tr
            %td(style="width: 130px") 2012/12/13 11:20
            %td YYYYがダウンロードしました。
          %tr
            %td 2012/12/13 09:54
            %td XXXXがアップロードしました。


