%ul.breadcrumb
  %li
    %i.icon-folder-open
  - @handout.ancestors.each do |a|
    %li
      = link_to a.name, content_path(a)
      %span.divider= "/"
  %li.active= @handout.name

.row
  .span6
    = render 'detail_panel', :handout => @handout
  .span6
    .panel.rounded
      .header.rounded-top
        %h4
          %i.icon-cog
          管理
      .content
        %dl
          %dt ファイル名
          %dd= @handout.name
          %dt タグ
          %dd
            - @handout.tag_list.each do |t|
              %span.label= t
        .action
          = link_to '編集', {:action => :edit}, :class => 'btn'
          = link_to({:action => :destroy}, :class => 'btn', :method => :delete, :confirm => "Are you sure?") do
            %i.icon-trash
            = "削除"

.row
  .span12
    .history
      .panel.rounded
        .header.rounded-top
          %h4
            %i.icon-book
            履歴
        .content
          %table.table.table-striped
            %tbody
              %tr
                %td(style="width: 130px") 2012/12/13 11:20
                %td YYYYがダウンロードしました。
              %tr
                %td 2012/12/13 09:54
                %td XXXXがアップロードしました。


