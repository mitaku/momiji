.rset-mcm-content
  - if content.directory?
    .icon= file_icon_image_tag(content)
    .info
      = link_to content.name, content_path(content.id)
    .other_info
      .visible-desktop
    .next_action
      .hidden-desktop

  - else
    .icon= file_icon_image_tag(content)
    .info
      %span= link_to content.name, content.data.to_s
      .visible-desktop
        = rset_mcm_file_size(content.file_size)
        - content.tag_list.each do |t|
          %span.label= t
      .hidden-desktop
        = t(".size_and_updated_at", :default => "%{updated_at}, %{size}",
                                    :size => rset_mcm_file_size(content.file_size),
                                    :updated_at => l(content.updated_at, :format => :short))
    .other_info
      .visible-desktop
        .updated_at
          = l(content.updated_at, :format => :short)
        .detail
          = link_to content_handout_path(content.parent, content) do
            %i.icon-info-sign
            = t("rset_mcm.common.detail")
    .next_action
      .hidden-desktop
        = link_to content_handout_path(content.parent, content) do
          %i.icon-chevron-right
